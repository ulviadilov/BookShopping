@model List<Slider>
@{
    int counter = 0;
}
@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.0/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items: center">
        <h1>Sliders</h1>
        <a class="btn btn-primary" asp-controller="slider" asp-action="create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title-1</th>
                <th scope="col">Title-2</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Redirect Url</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Slider slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title1</td>
                    <td>@slider.Title2</td>
                    <td>@slider.Desc</td>
                    <td>@slider.Price</td>
                    <td>@slider.RedirectUrl</td>
                    <td><div style="width:200px">
                            <img style="max-width:100%" src="~/uploads/sliders/@slider.Image">
                    </div></td>
                    <td>
                        <a class="btn btn-primary" asp-controller="slider" asp-action="edit" asp-route-id="@slider.Id">Edit</a>
                        <a class="btn btn-danger delete-button" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.0/sweetalert2.min.js" integrity="sha512-IYzd4A07K9kxY3b8YIXi8L0BmUPVvPlI+YpLOzKrIKA3sQ4gt43dYp+y6ip7C7LRLXYfMHikpxeprZh7dYQn+g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}